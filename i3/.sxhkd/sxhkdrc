# sxhkd reload

super + Escape
	pkill -USR1 -x sxhkd;notify-send 'sxhkd' 'Reloaded config'

#Rofi

super + d
   	# rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons
   	rofi -show drun


# Application Keybindings

super + shift + Return
   xterm
   
super + Return
   tilix

super + b
	wmctrl -a firefox-esr || firefox-esr
	
super + f
	wmctrl -a Thunar || thunar
	
super + r
   tilix -e "ranger"

super + v
   tilix -e "nvim"
   
