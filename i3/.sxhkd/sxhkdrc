#########
# Scrot #
#########
super + @Print
	scrot -s -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Selected image to ~/Screenshots'

@Print
	scrot -e 'mv $f ~/Screenshots'; \
	notify-send 'Scrot' 'Image saved to ~/Screenshots'
	
