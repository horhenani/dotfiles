        #focused_workspace  #AE445A #AE445A #ffffff
        #active_workspace   #333333 #5f676a #ffffff
        #inactive_workspace #662549 #662549 #777777
        #urgent_workspace   #2f343a #900000 #ffffff
        #binding_mode       #2f343a #900000 #ffffff
        
        #background #1f222d55
        #statusline #81a1c1

            #                   border  background text
            # focused_workspace  #b6b4b333 #b6b4b333    #000000
            #focused_workspace  #ffffff #ffffff    #000000
            # active_workspace   #1f222d00 #25293600    #ffffff
            #active_workspace   #000000cf #000000cf    #ffffff
            # inactive_workspace #1f222d00 #1f222d00    #ffffff
            #inactive_workspace #000000cf #000000cf    #ffffff
            # urgent_workspace   #1f222d #1f222d    #ee829f
    }
}

